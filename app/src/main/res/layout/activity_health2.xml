<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthActivity">

    <Button
        android:id="@+id/sanityUp"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Add Sanity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DamageUp" />

    <Button
        android:id="@+id/sanityDown"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="Remove Sanity"
        app:layout_constraintEnd_toEndOf="@+id/sanityUp"
        app:layout_constraintTop_toTopOf="@+id/damageDown" />

    <Button
        android:id="@+id/DamageUp"
        android:layout_width="166dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Add Damage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/damageDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Remove Damage"
        app:layout_constraintStart_toStartOf="@+id/DamageUp"
        app:layout_constraintTop_toBottomOf="@+id/DamageUp" />

    <TextView
        android:id="@+id/healthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/damageDown"
        app:layout_constraintStart_toStartOf="@+id/damageDown"
        app:layout_constraintTop_toBottomOf="@+id/damageDown" />

    <TextView
        android:id="@+id/sanityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/sanityDown"
        app:layout_constraintStart_toStartOf="@+id/sanityDown"
        app:layout_constraintTop_toTopOf="@+id/healthText" />
</androidx.constraintlayout.widget.ConstraintLayout>